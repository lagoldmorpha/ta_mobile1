<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Biodata Form -->

    <!-- Image View -->
    <ImageView
        android:id="@+id/my_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="My Image"
        android:scaleType="centerCrop"
        android:src="@drawable/titlebiodatasiswa" />

    <!-- Biodata Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="30dp">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Golongan Darah"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <Spinner
            android:id="@+id/golongamn_darah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp" />

        <!-- Nama Panggilan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Penyakit yang di derita"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/penyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="Penyakit"
            android:padding="12dp" />

        <!-- Jenis Kelamin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kelainan Jasmani"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/kelainan_jasmani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="Penyakit"
            android:padding="12dp" />

        <!-- Tempat dan Tanggal Lahir -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Tinggi Badan"
            android:textSize="17dp"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/tinggi_badan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="Masukkan Tinggi Badan"
            android:padding="12dp" />

        <!-- Agama -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Berat Badan"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/berat_badan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="Masukkan Berat Badan"
            android:padding="12dp" />



        <!-- Kewarganegaraan -->

    </LinearLayout>

    <!-- Next Button -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/kembali"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:background="@color/white"
            android:src="@drawable/kembali_btn"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="Button" />

        <ImageButton
            android:id="@+id/selanjutnya"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:background="@color/white"
            android:src="@drawable/selanjutnya"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="Button" />


    </LinearLayout>






</LinearLayout>
