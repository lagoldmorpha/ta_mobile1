<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_alamat"
    android:background="@android:color/white">

    <!-- Biodata Form -->

    <!-- Image View -->
    <ImageView
        android:id="@+id/my_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:contentDescription="My Image"
        android:scaleType="centerCrop"
        android:src="@drawable/title_alamat" />

    <!-- Biodata Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="30dp">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Alamat siswa"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/alamat_siswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="Alamat"
            android:padding="12dp" />

        <!-- Nama Panggilan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="NO. Telp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/no_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="08xx"
            android:padding="12dp" />

        <!-- Jenis Kelamin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tinggal Dengan"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <Spinner
            android:id="@+id/spinner_tinggal_dengan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:padding="12dp" />

        <!-- Tempat dan Tanggal Lahir -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:text="Tempat Lahir"
            android:textSize="17dp"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/et_tempat_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="Masukkan Tempat Lahir"
            android:padding="12dp" />

        <!-- Agama -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tanggal Lahir"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/et_tanggal_lahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"

            android:padding="12dp" />



        <!-- Kewarganegaraan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Jarak ke sekolah"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/jarak_sekolah"
            android:layout_width="match_parent"
            android:textSize="17dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_background"
            android:hint="...Km"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Next Button -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/kembali"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:background="@color/white"
            android:src="@drawable/kembali_btn"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="Button" />

        <ImageButton
            android:id="@+id/selanjutnya"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:background="@color/white"
            android:src="@drawable/selanjutnya"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="130dp"
            android:contentDescription="Button" />


    </LinearLayout>






</LinearLayout>
